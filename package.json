{
  "name": "react-native-dynamic-style-processor",
  "version": "0.10.3",
  "description": "React Native dynamic style processor combines multiple runtime style transformations together.",
  "main": "dist/index.js",
  "bugs": {
    "url": "https://github.com/kristerkari/react-native-dynamic-style-processor/issues"
  },
  "homepage": "https://github.com/kristerkari/react-native-dynamic-style-processor#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kristerkari/react-native-dynamic-style-processor.git"
  },
  "author": "Krister Kari",
  "license": "MIT",
  "files": [
    "dist",
    "src",
    "!**/__tests__",
    "!**/__mocks__",
    "!**/perf-tests",
    "CHANGELOG.md",
    "README.md"
  ],
  "keywords": [
    "react-native",
    "ReactNative",
    "styles",
    "css",
    "transform"
  ],
  "scripts": {
    "size": "npm run build && size-limit",
    "prepublish": "npm run build",
    "prebuild": "rimraf dist",
    "build": "babel src --out-dir dist --ignore src/__tests__,src/__mocks__",
    "precommit": "lint-staged",
    "release": "npmpub",
    "test": "echo yup"
  },
  "dependencies": {
    "css-viewport-units-transform": "^0.10.2",
    "micro-memoize": "^2.0.3",
    "react-native-css-media-query-processor": "^0.14.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.0.1",
    "babel-preset-es2015": "^6.24.1",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lint-staged": "^7.1.3",
    "npmpub": "^3.1.0",
    "prettier": "^1.13.4",
    "rimraf": "^2.6.2",
    "size-limit": "^0.18.3"
  },
  "peerDependencies": {
    "react-native": ">=0.45.0"
  },
  "lint-staged": {
    "*.{js,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none"
  },
  "size-limit": [
    {
      "limit": "3 KB",
      "path": "dist/index.js"
    }
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/*.js"
    ],
    "coverageDirectory": "./.coverage/",
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    }
  }
}
